# .env.example - Copy to .env and fill in the values
# These variables are used by docker-compose.yml

# --- PostgreSQL ---
POSTGRES_DB=mykasbai
POSTGRES_USER=kasbai_user
POSTGRES_PASSWORD=a_very_strong_password_change_me

# --- API (NestJS) ---
# This URL is used by Prisma for migrations and by the NestJS app inside Docker
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public"

# Generate a secure secret with `openssl rand -hex 32`
JWT_SECRET=a_very_secure_jwt_secret_change_me
# Generate another secure secret for the refresh token
JWT_REFRESH_SECRET=another_very_secure_secret_change_me

# --- AI Provider ---
# Can be 'openai', 'gemini', or 'local'
AI_PROVIDER=local
OPENAI_API_KEY=sk-your_openai_key_here # Only needed if provider is openai
GEMINI_API_KEY=your_gemini_key_here    # Only needed if provider is gemini

# --- Web (Next.js) ---
# These are build-time variables for the web container.
# The running container will use these values.
# The URL the frontend uses to call the backend.
NEXT_PUBLIC_API_URL=https://mykasbai.ir/app/api
# The base path for the Next.js app. Must match nginx config.
NEXT_PUBLIC_BASE_PATH=/app
